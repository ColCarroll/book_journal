body
  background-image url('/images/wood.jpg')
  padding: 50px
  font-family: "Comic Sans MS", cursive, sans-serif
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #000
a
  color: #00B7FF
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 60px
#books
  text-align left
  margin-left auto
  margin-right auto
  width 500px
  .book
    background-color #FAF1D7
    margin 20px
    border-width 3px
    border-color #000
    border-style solid
    border-radius 20px
    padding 20px
    .created_at
      display none
    .title
      font-weight bold
      background-color #eee
    .author
      font-weight bold
      background-color #eee

.newbook
    background-color #FAF1D7
    border 3px
    border-color #000
    border-style dotted
    width 450px
    margin-left auto
    margin-right auto
    padding 14px
  input[type =text]
    width 200px
    margin-left 16px
    float left
  input[type =button], input[type =submit]
    clear both
    text-align left
    margin-left 165px
    display block
  .label
      width 150px
      text-align right !important
      display block
      float left
